<div class="card-deck mb-3">
<div class="card-columns text-center">
  <% @chocolate_lists.each do |choco| %>
    <div class="card mb-3 border-0">
      <% if choco.image.attached? %>
        <%= image_tag choco.image.variant( resize: "190x150" ), class: 'drop-shadow', id:'bar-choco' %>
      <% else %>
        <%= image_tag 'bar-chocolate.png', id: 'bar-choco' , size: "190x150"%>
      <% end %>
      <div class="card-body">
      <%= link_to chocolate_path(choco), class: 'link' do %>
        <h1 class="card-title"><%= choco.name %></h1>
      <% end %>
        <p class="card-text"><%= choco.detail %></p>
      </div>
    </div>
  <% end %>
</div>
</div>
