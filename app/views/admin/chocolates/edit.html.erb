<h1 class="text-center my-5">Chocolate Edit</h1>
<div class="row justify-content-center text-center">
  <div class="col-8">
    <div class="card text-center">
      <div class="card-body">
      <%= form_with model: @chocolate, url: admin_chocolate_path(@chocolate), method: :patch, local: true do |f| %>        
        <div class="form-group">
          <%= f.label :name, class: "text-info" %>
          <%= f.text_field :name, value: @chocolate.name, class: "form-control" %>
          <%= render 'shared/error_messages', model: f.object, attribute: :name %>
        </div>
        <div class="form-group">
          <%= f.label :detail, class: "text-info" %>
          <%= f.text_area :detail, value: @chocolate.detail, class: "form-control" %>
          <%= render 'shared/error_messages', model: f.object, attribute: :detail %>
        </div>
        <div class="form-group">
          <%= f.label :image, class: "text-info" %>
          <%= f.file_field :image, value: @chocolate.image, accept: 'image/*', class: "form-control" %>
        </div>
        <div class="actions text-center">
          <%= f.submit "更新", class: "btn btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
