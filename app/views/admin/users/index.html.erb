<div class="row">
  <div class="col-md-10 offset-md-2">
    <h1>ユーザー一覧</h1>
  </div>
  <div class="container col-md-10">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>id</th>
          <th>氏名</th>
          <th>権限</th>
          <th>作成日時</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td>
              <%= user.name %>
            </td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <td><%= user.created_at.strftime("%y/%m/%d") %></td>
            <td>
            <%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-primary' %>
            <%= link_to '削除', admin_user_path(user), method: :delete ,class: 'btn btn-danger', data: { confirm: '削除しますか？' } %>
            </td>
          </tr>
        <% end %>
     </tbody>
    </table>
  </div>
</div>
