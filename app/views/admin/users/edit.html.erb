<div class="container">
  <div class="row">
  <div class="col-md-10 offset-md-2">
    <h1>ユーザー編集</h1>
  </div>
    <div class="col-lg-8 offset-lg-2">
    <%= form_with model: @user, local: true, url: admin_user_path(@user), local: true, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control mb-3' %>
        <%= render 'shared/error_messages', model: f.object %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control mb-3' %>
        <%= render 'shared/error_messages', model: f.object %>
      </div>
      <div class="form-group">
        <%= f.label :role, '権限' %>
        <%= f.select :role, User.roles.keys, { include__blank: '権限を選択してください' }, { class: 'form-control' } %>
        <%= render 'shared/error_messages', model: f.object %>
      </div>
        <%= f.submit '更新する', class: 'btn btn-primary' %>
    <% end %>
    </div>
  </div>
</div>
