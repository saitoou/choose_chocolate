<div class="form">
  <div class="card border-0">
    <div class="card-name">
      <h1><%= @good_stimulus_choco.name %></h1>
    </div>
    <div class="card-body">
      <div class="mb-5">
      <% if @good_stimulus_choco.image.blank? %>
        <%= image_tag 'bar-chocolate.png', id: 'checklist' , size: "350x200"%>
      <% else %>
        <%= image_tag @good_stimulus_choco.image.variant(resize: "350x200").processed, id:'checklist' %>
      <% end %>
      </div>
      <h3><%= @good_stimulus_choco.detail %></h3>
    </div>
    <div class="result-chart mb-5">
    <div id="chart"  data-sweet-value="<%= @good_stimulus_review.sweet %>" data-cacao-value="<%= @good_stimulus_review.cacao %>" data-appearance-value="<%= @good_stimulus_review.appearance %>" data-texture-value="<%= @good_stimulus_review.texture %>" data-melt-value="<%= @good_stimulus_review.melt %>" ></div>
    <canvas id="myChart" width="100px" height="100px"></canvas>
  </div>

  <div id="main" class="fixed-buttom text-right">
  <%= link_to "https://twitter.com/share?&url=https://choosechocolate.herokuapp.com/&text=あなたの疲れを癒すのは#{@good_stimulus_choco.name}です！&hashtags=choosechocolate,癒しのチョコ&lang=ja", title: 'Twitter', target: :_blank, rel: 'noopener noreferrer', class: "twitter btn" do %>
  <i class="fab fa-twitter share-button"></i>
  <% end %>
  </div>

  <div class="text-center">
  <%= link_to chocolates_path, class:'btn btn-choco-list' do %>
  <p>チョコレート一覧</p>
  <% end %>
  </div>
</div>

<%= javascript_pack_tag 'pages/result_chart' %>
