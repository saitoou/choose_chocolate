<div class="container text-center mb-5">
  <h1 class="title-font">パスワードリセット申請</h1>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <%= form_with model: @user, url: password_resets_path, local: true, method: :post do |f| %>
        <div class="input-form h2 my-5 shadow-none">
          <%= f.label :email, User.human_attribute_name(:email) %><br>
          <%= f.text_field :email, type: "text", placeholder: "choco@example.com" %>
        </div><br>
        <div class="actions text-center">
          <%= f.submit '送信', class: "btn btn-outline-light rounded" %>
        </div>
      <% end %>
      <div class="text-center password-forget my-5">
        <%= link_to '新規登録', new_user_path, class: "h5 mx-5 text-link" %>
        <%= link_to 'ログイン', login_path, class: "h5 mx-5 text-link" %>
      </div>
    </div>
  </div>
</div>
