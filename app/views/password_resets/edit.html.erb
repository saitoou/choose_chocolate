<div class="container text-center mb-5">
  <h1 class="title-font">パスワードリセット</h1>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
        <div class="input-form h2 py-3 shadow-none">
          <%= f.label :email, User.human_attribute_name(:email) %><br>
          <%= f.text_field :email, type: "text", placeholder: "choco@example.com" %>
          <%= render 'shared/error_messages', model: f.object, attribute: :email %>
        </div><br>
        <div class="input-form h2 py-3 shadow-none">
          <%= f.label :password, User.human_attribute_name(:password) %><br>
          <%= f.password_field :password, type: "password", placeholder: "password" %>
          <%= render 'shared/error_messages', model: f.object, attribute: :password %>
        </div><br>
        <div class="input-form h2 py-3 shadow-none">
          <%= f.label :password_confirmation, User.human_attribute_name(:password_confirmation) %><br>
          <%= f.password_field :password_confirmation, type: "password", placeholder: "password" %>
          <%= render 'shared/error_messages', model: f.object, attribute: :password %>
        </div><br>
        <div class="actions text-center topbtn">
          <%= f.submit '変更', class: "btn btn-outline-light" %>
        </div>
      <% end %>
      <div class="text-center password-forget my-5">
        <%= link_to '新規登録', new_user_path, class: "mx-5 h5 text-link" %>
        <%= link_to 'ログイン', login_path, class: "mx-5 h5 text-link" %>
      </div>
    </div>
  </div>
</div>
